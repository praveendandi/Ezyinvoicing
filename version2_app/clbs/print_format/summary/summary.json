 "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n     <title style=\"text-align:center\">Summary</title>\n    <style>\n        body{\n            font-size: 12px !important;\n            font-family: Arial, Helvetica, sans-serif; !important;\n            \n        }\n        .row{\n            display:flex;\n        }\n        table{\n            border: solid !important;\n            border-width: 2px !important;\n             width:100% !important;\n            /*min-width : 80%;*/\n            /*max-width : 95%;*/\n        }\n        table,th,td{\n            border: solid 1px black !important;\n            border-collapse: collapse;\n            \n        }\n         table thead tr th{\n            padding: 2px 4px !important;\n        }\n        table tr td{\n            padding: 2px 4px !important;\n        }\n        table.print-friendly tr td, table.print-friendly tr th {\n        page-break-inside: avoid;\n        border : solid 1px black;\n    }\n        .totalamount{\n          border : solid 1px black;\n        }\n    </style>\n</head>\n<body>\n    <div class=\"summary\">\n        <h4 style=\"text-align:center;font-size:18px\">Summary</h4>\n        <div class=\"\" style=\"display:flex\">\n            {% set doc_data =  frappe.db.sql(\"\"\"select DATE_FORMAT(`tabSummaries`.from_date,'%d-%m-%Y') as from_date,`tabSummaries`.terms_and_conditions,`tabSummaries`.footer,`tabTaxPayerDetail`.legal_name,`tabTaxPayerDetail`.company,`tabTaxPayerDetail`.gst_number,`tabTaxpayer Locations`.location,`tabTaxpayer Locations`.address,`tabTaxpayer Locations`.pin_code,`tabTaxPayerDetail`.state_code,`tabTaxpayer Locations`.city from `tabSummaries` inner join `tabTaxPayerDetail` on `tabTaxPayerDetail`.gst_number=`tabSummaries`.tax_payer_details inner join `tabTaxpayer Locations` on `tabTaxpayer Locations`.name=`tabSummaries`.location where `tabSummaries`.tax_payer_details='{}' \"\"\".format(tax_payer_details),as_dict=1)%}\n            {% set doc_data = doc_data|first %}\n            \n            {% set company_details=frappe.db.get_value('company',{'name':doc_data.company},['summary_header','summary_terms_and_conditions','summary_footer'],as_dict=1)%}\n            \n            <!--{% set company_details= company_details%}-->\n            <!--{{company_details}}-->\n            <p class=\"fw-bold\">Date :- {{ frappe.format_value(frappe.utils.now(), {'fieldtype': 'Date'}) }}</p>\n            <!--<p class=\"fw-bold\">{{doc_data.guest_name}}</p>-->\n        </div>\n        <div class=\"\" style=\"display:flex\">\n            <div style=\"width:100%\">\n        <p>To,</p>\n        <p>\n            <b class=\"fw-bold\">{{doc_data.legal_name}}</b><br>\n           {{doc_data.legal_name}} <br>\n            {%set items=[doc_data.address,doc_data.location,doc_data.city,doc_data.state,doc_data.pin_code]%}\n            {{ items|reject('equalto', None)|join(',') }}\n        </p><br>\n\n        <p>\n           Gst Number: {{doc_data.gst_number}}<br>\n            State Code : {{doc_data.state_code}}\n        </p>\n            \n\n        <p style=\"margin-top:15px\">\n            Dear Sir/ Madam, <br>\n            Sub: Please find enclosed the following bills for settlement\n        </p>\n\n        <table class=\"table print-friendly\" style=\"border:solid !important;border-width:2px !important;\">\n          {% set tempData = frappe.db.get_all(doctype=\"Summary Breakups\",filters={\"summaries\":name},fields=[\"date as Date\",\"invoice_number as InvoiceNumber\",\"category as Category\",\"sac_codes as HSNCodes\",\"invoice_type as InvoiceType\",\"amount as Amount\"])\n          %}\n          {%set payment_details=frappe.db.get_all(doctype=\"Summary Payments\",filters={\"summary\":name},fields=[\"payment_description\",\"amount\",\"summary\"])%}\n          \n          {% set tempData2 = tempData|first %}\n        \n           \n                <!--<tr>-->\n                    \n                <!--    <th>Sr .No</th>-->\n                <!--    <th>Date</th>-->\n                <!--    <th></th>-->\n                <!--    <th>Service Type</th>-->\n                <!--    <th>InvoiceType</th>-->\n                <!--    <th>Amount</th>-->\n                <!--</tr>-->\n                <thead>\n                \n                 <tr>\n          {% for k,x in tempData2.items()%}\n          \n       \n        <th>{{ k }}</th>\n    \n                {% endfor %}\n            \n     \n        </tr>\n                \n        </thead>\n           \n                \n             \n                \n                    {% for v in tempData%}\n                    \n                  \n                    <tr>\n                         {% for k,x in v.items()%}\n                         {% if 'Amount' in k %}\n                          <td style=\"text-align:right\">{{x|int}}</td>\n                         {% else%}\n                         <td>{{x}}</td>\n                         {% endif %}\n                        {% endfor %}\n                       \n                    </tr>\n                     \n                    {% endfor %}\n              \n                    <tr class=\"totalamount\" style=\"border:solid 2px black\">\n\n                        <td colspan=\"3\" style=\"text-align:right\"><strong>Total Amount</strong></td>\n\n                        <td colspan=\"1\" style=\"text-align:right\"><strong>{{(tempData|sum(attribute='Amount'))|int}}</strong></td>\n                        \n                     \n                    </tr>\n                    {% for v in payment_details%}\n                    <tr class=\"totalamount\">\n                        <td colspan=\"2\" style=\"text-align:left\"><strong>{{v.payment_description}}</strong></td>\n                        <td colspan=\"1\" style=\"text-align:right\">{{v.amount}}</td>\n                     \n                    </tr>\n                    {% endfor %}\n                    <tr>\n                        <td colspan=\"2\" style=\"text-align:right\"></td>\n                       <td></td>\n                       <td colspan=\"1\" style=\"text-align:right\"><strong>{{(payment_details|sum(attribute='amount'))|int}}</strong></td>\n                    </tr>\n                    <tr class=\"totalamount\" style=\"border:solid 2px black\">\n                        {%set sum_amount=(tempData|sum(attribute='Amount'))|int-(payment_details|sum(attribute='amount'))|int%}\n                        \n                        {% if sum_amount> 0 %}\n                        <td colspan=\"3\" style=\"text-align:right\"><strong>Total Amount to be Payble</strong></td>\n                        {% else%}\n                        <td colspan=\"3\" style=\"text-align:right\"><strong>Total Amount to be Refund</strong></td>\n                        {% endif %}\n                        <td colspan=\"1\" style=\"text-align:right\"><strong>{{sum_amount}}</strong></td>\n                        \n                     \n                    </tr>\n              \n            \n        </table>\n</div>\n</div>\n<div class=\"\" style=\"margin-top:25px\">\n    <div class=\"\">\n        <!--{% if doc_data.terms_and_conditions%}-->\n        <!--  <p>{{ doc_data.terms_and_conditions}}</p>-->\n        <!-- {% else%}-->\n        <!-- <p>{{company_details.summary_terms_and_conditions }}</p>-->\n        <!-- {% endif %}-->\n        <p>\n            {{doc_data.terms_and_conditions if doc_data.terms_and_conditions else company_details.summary_terms_and_conditions}}\n        </p>\n    </div>\n</div>\n        \n        <div class=\"\" style=\"display:flex; margin-top:15px\">\n            <div class=\"\" style=\"width:50%;  margin-top:50px\">\n                <p>\n                \n                   <b> \n                   Thank you for your patronage  <br>\n                    Yours faithfully <br>\n                    For Cyberabad Convention Centre Pvt. Ltd <br>\n                    Sundara Varma <br>\n                    Credit Manager <br>\n                    Email Id: h6182-gl2@accor.com <br>\n                    Cel No :- 9642326201 <br>\n\n                 \n                    </b>\n\n                </p> \n            </div>\n            <div class=\"\" style=\"width:50%\">\n                <table class=\"table\">\n                    {% set bank_data = frappe.db.get_all(doctype=\"Bank Details\",fields=[\"*\"])\n                    %}\n                    <thead>\n                        <tr>\n                            <th colspan=\"2\" style=\"text-align:center\">Bank Details</th>\n                        </tr>\n                    </thead>\n                    <tbody>  \n                        {% for item in bank_data %}\n                           <tr>\n                           <td>BANK NAME</td>\n                           <td>{{item.bank_name}}</td>\n                           </tr>\n                           <tr>\n                               <td>BRANCH ADDRESS</td>\n                               <td>{{item.address}}</td>\n                           </tr>\n                           <tr>\n                               <td>BRANCH CODE</td>\n                                <td>{{item.branch_code}}</td>\n                           </tr>\n                           <tr>\n                               <td>BANK A/C NAME</td>\n                               <td><span>{{item.bank_ac_name}}</span></td>\n                           </tr>\n                           <tr>\n                               <td>BANK A/C NO.</td>\n                               <td><span>{{item.bank_ac_number}}</span></td>\n                           </tr>\n                            <tr>\n                             <td>IFSC CODE</td>\n                             <td>{{item.ifsc_code}}</td>\n                            </tr>\n                             <tr>\n                                 <td>MICR CODE</td>\n                                 <td>{{item.micr_code}}</td>\n                             </tr>\n                        \n                        {% endfor %}\n                        <!--<tr>-->\n                        <!--     <td>BANK NAME</td>-->\n                        <!--     <td>{{bank_data[0].bank_name}}</td>-->\n                        <!--</tr>-->\n                        <!--<tr>-->\n                        <!-- <td>BRANCH ADDRESS</td>-->\n                        <!-- <td>RAJBHAVAN ROAD,SOMAJIGUDA,HYD-500082</td>-->\n                        <!--</tr>-->\n                        <!--<tr>-->\n                             <!--<td>BRANCH CODE</td>-->\n                        <!--     <td>446</td>-->\n                        <!--</tr>-->\n                        <!--<tr>-->\n                             <!--<td>BANK A/C NAME</td>-->\n                        <!--     <td>CYBERABAD CONVENTION CENTER PVT.LTD</td>-->\n                        <!--</tr>-->\n                         <!--<tr>-->\n                             <!--<td>BANK A/C NO.</td>-->\n                         <!--    <td>5435456456456</td>-->\n                         <!--</tr>-->\n                        <!-- <tr>-->\n                        <!--     <td>IFSC CODE</td>-->\n                        <!--     <td>SCBL8498359</td>-->\n                        <!--</tr>-->\n                        <!-- <tr>-->\n                        <!--     <td>MICR CODE</td>-->\n                        <!--     <td>3435437543</td>-->\n                        <!-- </tr>-->\n                    </tbody>\n                 </table>\n            </div>\n        </div>\n       \n       <footer class=\"\" style=\"display:flex;margin-bottom:30px\">\n    <div>\n        <p>\n              <b>\n                     (GST No : {{doc_data.gst_number}}, PAN No:{{doc_data.gst_number[2:12]}},'CIN U55109TG2003PTC041544,Telangana State Code : {{doc_data.state_code}})\n              </b>\n        </p>\n    </div>\n</footer>\n       \n    </div>\n   \n    \n</body>\n</html>",
