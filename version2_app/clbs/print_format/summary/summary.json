 "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n     <title style=\"text-align:center\">Summary</title>\n    <style>\n        body{\n            font-size: 12px !important;\n            font-family: Arial, Helvetica, sans-serif; !important;\n            margin: -50px;\n        }\n        .print-format{\n            padding: 0px;\n            margin: 0;\n        }\n        \n        .print-table{\n            border: 0;\n        }\n        \n       .print-table table{\n           width: 100%;\n       }\n       \n       .print-table th, .print-table td{\n            border: none;\n            vertical-align: middle;\n        }\n        \n        .printable2 table {\n            width: 100%;\n        }\n        \n        .printable2 th, .printable2 td{\n            border: none;\n        }\n        \n        p{\n            margin-bottom:0px;\n        }\n         .row{\n            display:flex;\n        }\n        .printable3 table{\n             width:100% !important;\n            /*min-width : 80%;*/\n            /*max-width : 95%;*/\n        }\n        .printable3 table, .printable3 th, .printable3 td{\n            border: solid 1px black !important;\n            border-collapse: collapse;\n            \n        }\n        .printable3 table thead tr th{\n            padding: 2px 4px !important;\n        }\n        .printable3 table tr td{\n            padding: 2px 4px !important;\n        }\n        .print-friendly{\n            margin-top: 10px;\n        }\n        table.print-friendly tr td, table.print-friendly tr th {\n        page-break-inside: avoid;\n        }\n        .mb-0{\n            margin-bottom: 0;\n        }\n         #footer-html{\n            position:fixed;\n            bottom:-30px;\n        }\n\n        .page-break {\n            page-break-after: always;\n        }\n\n        \n    </style>\n</head>\n<body>\n    <div class=\"print-format\">\n        <p>{% set doc_data =  frappe.db.sql(\"\"\"select DATE_FORMAT(`tabSummaries`.from_date,'%d-%m-%Y') as from_date,`tabSummaries`.terms_and_conditions,`tabSummaries`.po_number,`tabSummaries`.footer,`tabTaxPayerDetail`.legal_name,`tabTaxPayerDetail`.company,`tabTaxPayerDetail`.gst_number,`tabTaxpayer Locations`.location,`tabTaxpayer Locations`.address,`tabTaxpayer Locations`.pin_code,`tabTaxPayerDetail`.state_code,`tabTaxpayer Locations`.city from `tabSummaries` inner join `tabTaxPayerDetail` on `tabTaxPayerDetail`.gst_number=`tabSummaries`.tax_payer_details inner join `tabTaxpayer Locations` on `tabTaxpayer Locations`.name=`tabSummaries`.location where `tabSummaries`.tax_payer_details='{}' and `tabSummaries`.name='{}'\"\"\".format(tax_payer_details,name),as_dict=1)%}\n        {% set doc_data = doc_data|first %}\n            \n        {% set company_details=frappe.db.get_value('company',{'name':doc_data.company},['summary_header','summary_terms_and_conditions','company_name','summary_footer'],as_dict=1)%}</p>\n        \n        <div class='print-table'>\n            <table class='table'>\n                <tr>\n                    <td style=\"width: 10%; text-align: left;\" ><img src={{base}} style=\"width: 150px; \"/></td>\n                    <td style=\"width: 90%; text-align: left; vertical-align: middle;\">\n                        <h2 style='margin-b'>{{company_details.company_name}}</h2>\n                    </td>\n                </tr>\n            </table>\n        </div>\n        <div class='printable2'>\n            <table class='table'>\n                <tr>\n                    <td colspan='2' style='text-align: center'>\n                        <h3 style=\"text-align: center\">Summary</h3>\n                    </td>\n                </tr>\n                <tr>\n                    <td style=\"width: 50%\">\n                       <p class=\"fw-bold mb-0\">Date :- {{ frappe.format_value(frappe.utils.now(), {'fieldtype': 'Date'}) }}</p>\n                    </td>\n                    <td style=\"width: 50%; text-align: right\">\n                        <p class='fw-bold mb-0'>PO Number: {{doc_data.po_number if doc_data.po_number else \"\"}}</p>\n                    </td>\n                </tr>\n                <tr>\n                    <td colspan='2'>\n                         <p class=\"m-0\">To,</p>\n                        <p>\n                            <b class=\"fw-bold\">{{doc_data.legal_name}}</b><br>\n                           {{doc_data.legal_name}} <br>\n                            {%set items=[doc_data.address,doc_data.location,doc_data.city,doc_data.state,doc_data.pin_code]%}\n                            {{ items|reject('equalto', None)|join(',') }}\n                        </p>\n                    </td>\n                </tr>\n                <tr>\n                    <td colspan='2'>\n                    <p>\n                        GST Number : {{doc_data.gst_number}}<br>\n                        State Code : {{doc_data.state_code}}\n                    </p>\n            \n                    <p style=\" margin-top:15px\">\n                        Dear Sir/ Madam, <br>\n                        Sub: Please find enclosed the following bills for settlement\n                    </p>\n                    </td>\n                </tr>\n            </table>\n        </div>\n        \n        <!--<header id=\"header-html\">-->\n        <!--    <h2 style=\"text-align:center;font-size:25px; margin: 0; padding: 0\">{{company_details.company_name}}</h2>-->\n        <!--</header>-->\n        <!--<h4 style=\"text-align:center;font-size:18px\">Summary</h4>-->\n        <!--<div class=\"\" style=\"display:flex\">-->\n            \n            <!--{% set company_details= company_details%}-->\n            <!--{{company_details}}-->\n        <!--    <p class=\"fw-bold\">Date :- {{ frappe.format_value(frappe.utils.now(), {'fieldtype': 'Date'}) }}</p>-->\n            <!--<p class=\"fw-bold\">{{doc_data.guest_name}}</p>-->\n        <!--</div>-->\n        <!--<div class=\"\" style=\"display:flex\">-->\n        <!--    <div style=\"width:100%\">-->\n        <!--<p>To,</p>-->\n        <!--<p>-->\n        <!--    <b class=\"fw-bold\">{{doc_data.legal_name}}</b><br>-->\n        <!--   {{doc_data.legal_name}} <br>-->\n        <!--    {%set items=[doc_data.address,doc_data.location,doc_data.city,doc_data.state,doc_data.pin_code]%}-->\n        <!--    {{ items|reject('equalto', None)|join(',') }}-->\n        <!--</p><br>-->\n\n        <!--<p>-->\n        <!--   Gst Number: {{doc_data.gst_number}}<br>-->\n        <!--    State Code : {{doc_data.state_code}}-->\n        <!--</p>-->\n            \n\n        <!--<p style=\"margin-top:15px\">-->\n        <!--    Dear Sir/ Madam, <br>-->\n        <!--    Sub: Please find enclosed the following bills for settlement-->\n        <!--</p>-->\n        \n        <div class='printable3'>\n        <table class=\"table print-friendly\">\n          {% set tempData = frappe.db.get_all(doctype=\"Summary Breakups\",filters={\"summaries\":name},fields=[\"date as Date\",\"invoice_number as InvoiceNumber\",\"category as Category\",\"sac_codes as HSNCodes\",\"invoice_type as InvoiceType\",\"amount as Amount\"])\n          %}\n          {%set payment_details=frappe.db.get_all(doctype=\"Summary Payments\",filters={\"summary\":name},fields=[\"payment_description\",\"amount\",\"summary\"])%}\n          \n          {% set tempData2 = tempData|first %}\n        \n           \n                <!--<tr>-->\n                    \n                <!--    <th>Sr .No</th>-->\n                <!--    <th>Date</th>-->\n                <!--    <th></th>-->\n                <!--    <th>Service Type</th>-->\n                <!--    <th>InvoiceType</th>-->\n                <!--    <th>Amount</th>-->\n                <!--</tr>-->\n                <thead>\n                \n                 <tr>\n          {% for k,x in tempData2.items()%}\n          \n       \n        <th>{{ k }}</th>\n    \n                {% endfor %}\n            \n     \n        </tr>\n                \n        </thead>\n           \n                \n             <tbody>\n                \n                    {% for v in tempData%}\n                    \n                  \n                    <tr>\n                         {% for k,x in v.items()%}\n                         {% if 'Amount' in k %}\n                          <td style=\"text-align:right\">{{x|int}}</td>\n                         {% else%}\n                         <td>{{x}}</td>\n                         {% endif %}\n                        {% endfor %}\n                       \n                    </tr>\n                     \n                    {% endfor %}\n              \n                    <tr class=\"totalamount\" style=\"border:solid 2px black\">\n\n                        <td colspan=\"5\" style=\"text-align:right\"><strong>Total Amount</strong></td>\n\n                        <td colspan=\"1\" style=\"text-align:right\"><strong>{{(tempData|sum(attribute='Amount'))|int}}</strong></td>\n                        \n                     \n                    </tr>\n                    {% for v in payment_details%}\n                    <tr class=\"totalamount\">\n                        <td colspan=\"2\" style=\"text-align:left\"><strong>{{v.payment_description}}</strong></td>\n                        <td colspan=\"1\" style=\"text-align:right\">{{v.amount}}</td>\n                     \n                    </tr>\n                    {% endfor %}\n                    <tr>\n                        <td colspan=\"2\" style=\"text-align:right\"></td>\n                       <td colspan=\"1\" style=\"text-align:right\"><strong>{{(payment_details|sum(attribute='amount'))|int}}</strong></td>\n                    </tr>\n                    <tr class=\"totalamount\" style=\"border:solid 2px black\">\n                        {%set sum_amount=(tempData|sum(attribute='Amount'))|int-(payment_details|sum(attribute='amount'))|int%}\n                        \n                        {% if sum_amount> 0 %}\n                        <td colspan=\"5\" style=\"text-align:right\"><strong>Total Amount to be Payble</strong></td>\n                        {% else%}\n                        <td colspan=\"5\" style=\"text-align:right\"><strong>Total Amount to be Refund</strong></td>\n                        {% endif %}\n                        <td colspan=\"1\" style=\"text-align:right\"><strong>{{sum_amount}}</strong></td>\n                        \n                     \n                    </tr>\n              </tbody>\n            \n        </table>\n       </div> \n\n<div class=\"\" style=\"margin-top:25px\">\n    <div class=\"\">\n        <!--{% if doc_data.terms_and_conditions%}-->\n        <!--  <p>{{ doc_data.terms_and_conditions}}</p>-->\n        <!-- {% else%}-->\n        <!-- <p>{{company_details.summary_terms_and_conditions }}</p>-->\n        <!-- {% endif %}-->\n        <p>\n            {{doc_data.terms_and_conditions if doc_data.terms_and_conditions else company_details.summary_terms_and_conditions}}\n            <!--{{doc_data.terms_and_conditions}}-->\n        </p>\n    </div>\n</div>\n        \n        <div class=\"\" style=\"margin-top:15px\">\n            <!--<div class=\"\" style=\"width:50%;  margin-top:50px\">-->\n            <!--    <p>-->\n                \n            <!--       <b> -->\n            <!--       Thank you for your patronage  <br>-->\n            <!--        Yours faithfully <br>-->\n            <!--        For Cyberabad Convention Centre Pvt. Ltd <br>-->\n            <!--        Sundara Varma <br>-->\n            <!--        Credit Manager <br>-->\n            <!--        Email Id: h6182-gl2@accor.com <br>-->\n            <!--        Cel No :- 9642326201 <br>-->\n\n                 \n            <!--        </b>-->\n\n            <!--    </p> -->\n            <!--</div>-