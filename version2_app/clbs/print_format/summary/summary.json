    <td>{{bank_data[0].bank_name}}</td>-->\n                        <!--</tr>-->\n                        <!--<tr>-->\n                        <!-- <td>BRANCH ADDRESS</td>-->\n                        <!-- <td>RAJBHAVAN ROAD,SOMAJIGUDA,HYD-500082</td>-->\n                        <!--</tr>-->\n                        <!--<tr>-->\n                             <!--<td>BRANCH CODE</td>-->\n                        <!--     <td>446</td>-->\n                        <!--</tr>-->\n                        <!--<tr>-->\n                             <!--<td>BANK A/C NAME</td>-->\n                        <!--     <td>CYBERABAD CONVENTION CENTER PVT.LTD</td>-->\n                        <!--</tr>-->\n                         <!--<tr>-->\n                             <!--<td>BANK A/C NO.</td>-->\n                         <!--    <td>5435456456456</td>-->\n                         <!--</tr>-->\n                        <!-- <tr>-->\n                        <!--     <td>IFSC CODE</td>-->\n                        <!--     <td>SCBL8498359</td>-->\n                        <!--</tr>-->\n                        <!-- <tr>-->\n                        <!--     <td>MICR CODE</td>-->\n                        <!--     <td>3435437543</td>-->\n                        <!-- </tr>-->\n                    </tbody>\n                 </table>\n            </div>\n             <div style=\"margin-top: 20px\">\n                    <p>\n                      <b>(GST No : {{doc_data.gst_number}}, PAN No:{{doc_data.gst_number[2:12]}}, State Code : {{doc_data.state_code}})</b>\n                    </p>\n                </div>\n        </div>\n       \n   <footer id=\"footer-html\">\n       \n       <p style=\"font-size:11px;font-weight:bold;text-align:center\">This is a computer generated summary no signature required.</p>\n   </footer>\n   </div>\n</body>\n</html>",
