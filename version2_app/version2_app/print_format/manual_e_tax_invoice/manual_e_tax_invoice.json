 "html": "    \n    <html dir=\"ltr\" lang=\"en\">\n\n    <style type=\"text/css\">\n        table { page-break-inside:initial }\n        tr    { page-break-inside:initial; page-break-after:auto }\n        thead { display:table-header-group }\n        tfoot { display:table-footer-group }\n    \n        \n    </style>\n\n<style>\n    @import url(\"https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css\");\n    \n    body:last-child .print-format td img{width: auto !important;}\n    \n    .print-format{\n        padding: 10px;\n        font-size: 9pt;\n    }\n    \n    body {\n        font-size: 9pt;\n        background: #fff;\n        width: 100%;\n        box-sizing: content-box\n    }\n\n   \n\n\n    @media print {\n        @page {\n            margin:0;\n            size: A4 !important;\n             DIN A4 standard, Europe \n\n\n        }\n        /*@page{*/\n        /*    size:landscape; */\n        /*    margin: 0; */\n        /* }*/\n\n    }\n\n\n\n    .table-bordered td,\n    .table-bordered th {\n        padding: 0;\n        border: 0 !important;\n    }\n\n    .table th {\n        border-top: 0;\n        padding: 0px;\n        border-collapse:collapse;\n    }\n    \n    .table td {\n        border: 1px solid rgba(221, 218, 218, 0.3);\n        padding: 0px;\n        border-collapse:collapse;\n    }\n\n    * {\n        padding: 0;\n        margin: 0;\n        font-family: sans-serif;\n        border-spacing: 0;\n    }\n    .w-100{\n        width:100%;\n    }\n\n    /* .container {\n        width: 1200px;\n        padding: 0;\n        margin-right: auto;\n        margin-left: auto;\n        clear: both;\n    } */\n\n    /* .border {\n        border: 1px solid rgba(102, 102, 102, 0.479);\n        border-radius: 6px;\n        margin-bottom: 4px;\n        width: 100%;\n    } */\n\n    .border-top {\n        /*border-top: 1px solid rgba(102, 102, 102, 0.479);*/\n        margin: 5px 0;\n        padding-top: 5px;\n    }\n\n    .b-h {\n        border: 1px solid rgba(221, 218, 218, 0.3);\n    }\n\n    table {\n        width: 99%;\n        text-align: left;\n        box-sizing: 0;\n        border: none;\n    }\n\n    img {\n        max-width: 100%;\n    }\n\n    .logo img {\n        height: 100px;\n        /*margin-left:100px;*/\n    }\n\n    /*.print-format td .qr img{margin: 10px;height: 200px;width: auto !important;}*/\n\n    strong {\n        font-weight: 700;\n    }\n\n    .heading {\n        padding: 5px;\n        /*border-bottom: 1px solid rgba(102, 102, 102, 0.479);*/\n    }\n\n    .heading h4 {\n        font-size: 14px;\n        margin: 0;\n    }\n\n    .c-p-8 {\n        padding: 0px;\n    }\n\n\n\n    .px-2 {\n        margin: 0;\n        padding: 0 0px;\n    }\n\n    .party h5 {\n        font-size: 14px;\n        margin-bottom: 10px;\n    }\n\n    p {\n        line-height: 20px;\n        font-size: 9pt;\n    }\n\n    .party .max-500 {\n        max-width: 550px;\n    }\n\n    .goods2 thead {\n        border-top: 1px solid rgba(221, 218, 218, 0.3);\n    }\n\n    .goods table,\n    .goods td,\n    .goods th {\n        border: 1px solid rgba(221, 218, 218, 0.3);\n        padding: 10px 3px !important;\n        font-size: 9pt;\n        text-transform: capitalize;\n    }\n    .border{border: 1px solid #d6d6d6 !important;}\n    .goods2 th,\n    .goods2 td {\n        padding: 7px 3px;\n    }\n\n    .goods {\n        border-collapse: collapse;\n    }\n\n    .text-right {\n        text-align: right;\n    }\n\n    .c-p-8 table td {\n        padding: 5px;\n    }\n\n    .mr-2{\n        margin-right: 10px !important;\n    }\n    .mb-0 {\n        margin: 10px !important;\n    }\n\n    .goods.mb-0 {\n        margin: 0 !important;\n    }\n    address{font-size: 9pt;}\n    .d-flex{\n        display:flex;\n    }\n    .qr-img{\n        margin-left:100px;\n    }\n    /*.pdfTable table { page-break-inside: avoid;}*/\n    \n    \n\n\n</style>\n\n<body>\n\n<div class='print-format'>\n    <div class=\"border px-2\">\n        <table>\n            <tr>\n            <td>\n            <div>\n                <table class=\"table mb-0\"  >\n                <tbody>\n                    <tr>\n                        <td width=\"60%\" style=\"vertical-align: middle;\">\n                            {% set company_details=frappe.get_doc('company', company) %}\n                            \n                            <div class=\"logo\">\n                                <div class=\"mb-3\">\n                                   <img src=\"{{base}}\" alt=\"\">\n                                </div>\n                                <p>{{company_details.legal_name}} <br>\n                                    {{company_details.address_1}}, {{company_details.address_2}},{{company_details.location}}, {{company_details.pincode}}</p>\n                                    \n                                    \n                            </div>\n                        </td>\n                        <td width=\"40%\" align=\"right\">\n                            <div class=\"qr qr-img\">\n                                <img class=\"img-fluid\" src=\"{{qr_image_base}}\" alt=\"\">\n                            </div>\n                        </td>\n                    </tr>\n                </tbody>\n            </table>\n            </div>\n\n            <div>\n                <table class=\"table mb-0\">\n                <tbody>\n                    <tr>\n                        <td width=\"100%\">\n                            <div class=\"\">\n                                <div class=\"heading\">\n                                    <h4><strong>1. e-Invoice Details</strong></h4>\n                                </div>\n                                <div class=\"c-p-8\">\n                                    <table>\n                                        <tr>\n                                            {% if ( invoice_category=='Tax Invoice' or invoice_category=='Debit Invoice' ) %}\n                                                <td><strong>IRN</strong> : <br>{{irn_number}}</td>\n                                                <td><strong>Ack. No </strong> : <br>{{ack_no}}</td>\n                                                <td><strong>Ack. Date </strong> : <br>{{ack_date}}</td>\n                                            {% elif ( invoice_category=='Credit Invoice' ) %}\n                                                <td><strong>IRN</strong> : <br>{{credit_irn_number}}</td>\n                                                <td><strong>Ack. No </strong> : <br>{{credit_ack_no}}</td>\n                                                <td><strong>Ack. Date </strong> : <br>{{credit_ack_date}}</td>\n                                            {% endif %}\n                                            \n                                        </tr>\n                                    </table>\n                                </div>\n                            </div>\n                        </td>\n                    </tr>\n\n                </tbody>\n            </table>\n            </div>\n\n            <div>\n                <table class=\"table mb-0\">\n                <tbody>\n                    <tr>\n                        <td width=\"100%\">\n                            <div class=\"\">\n                                <div class=\"heading\">\n                                    <h4><strong>2. Transaction Details</strong></h4>\n                                </div>\n                                <div class=\"c-p-8\">\n                                    <table>\n                                        <tr>\n                                            <td width=\"25%\"><strong>Category</strong>:{{invoice_type}}</td>\n                                            <td width=\"25%\"><strong>Invoice No</strong> :{{invoice_number}} </td>\n                                            <td width=\"25%\"><strong>Guest Name </strong> :{{guest_name}} </td>\n                                        </tr>\n                                         <tr>\n                                            <td width=\"25%\"><strong>Document Type </strong>:{{invoice_category}}</td>\n                                            <td width=\"25%\"><strong>Document Date</strong> :{{invoice_date}}</td>\n                                            <td width=\"25%\"><strong>Room Number</strong>:{{room_number}}</td>\n                                        </tr>\n\n                                    </table>\n\n                                </div>\n                            </div>\n                        </td>\n                    </tr>\n\n                </tbody>\n            </table>\n            </div>\n\n            <div>\n                <table class=\"table mb-0\" >\n                <tbody>\n                    <tr>\n                        <td width=\"100%\">\n                            <div class=\"\">\n                                <div class=\"heading\">\n                                    <h4><strong>3. Party Details</strong></h4>\n                                </div>\n                                <div class=\"c-p-8\">\n                                    <table class=\"party  goods mb-0 \">\n                                        <tr>\n                                            <td width=\"50%\" style=\"vertical-align: top;\">\n                                                <div>\n                                                    <h5><strong>Seller</strong></h5>\n                                                </div>\n                                                {% set company_details=frappe.get_doc('company',company) %}\n                                                <div class=\"max-500\">\n                                                    <div class=\"d-flex\">\n                                                        <p class=\"mb-1 mr-2\"><strong>GSTIN</strong> :{{gst_number}}</p>\n                                                        <p><strong>PAN</strong> :{{gst_number[2:12]}}</p>\n                                                    </div>\n                                                    <p><strong>FSSAI LIC No :</strong>{{company_details.fssai_number}}</p>\n                                                    <p>{{company_details.company_name}}<br>{{company_details.legal_name}}s <br>\n                                                    {{company_details.address_1}},\n                                                    <br>{{company_details.location}}, \n                                                    <br>{{company_details.pincode}}\n                                                    </p>\n                                                </div>\n                                            </td>\n                                            <td width=\"50%\"\n                                                style=\"vertical-align: top;\">\n                                                <div>\n                                                    <h5><strong>Purchaser</strong></h5>\n                                                </div>\n                                                {% set tax_payer_details=frappe.get_doc('TaxPayerDetail',gst_number) %}\n                                                        <p><strong>Guest Name</strong> :{{guest_name}}</p>\n                                                    <div class=\"d-flex\">\n                                                        <p class='mr-2'><strong>GSTIN </strong> :{{gst_number}}</p>\n                                                        <p><strong>PAN</strong> :{{gst_number[2:12]}}s</p>\n                                                    </div>\n                                                    <p><strong>{{tax_payer_details.legal_name if tax_payer_details else \"\"}}\n                                                    <br>{{tax_payer_details.address_2 if tax_payer_details else \"\"}}, \n                                                    <br>{{tax_payer_details.location if tax_payer_details else \"\"}},\n                                                    <br>{{tax_payer_details.pincode if tax_payer_details else \"\"}}</strong></p>\n                                            </td>\n                                        </tr>\n\n                                    </table>\n\n                                </div>\n                            </div>\n                        </td>\n                    </tr>\n\n                </tbody>\n            </table>\n            </div>\n\n            <div>\n              <table class=\"table mb-0 \">\n                <tbody>\n                    <tr>\n                        <td width=\"100%\" >\n                            <div>\n                                <!--<div class=\"heading b-h\">-->\n                                <!--    <h4><strong>4. Item Details</strong></h4>-->\n                                <!--</div>-->\n                                <div class=\"c-p-8\">\n                                    <div class=\"heading b-h\">\n                                        <h4><strong>4. Item Details</strong></h4>\n                                    </div>\n                                    \n                                    <table class=\"table goods goods2 mb-0\">\n                                        <thead>\n                                             <tr>\n                                                <th>Date</th>\n                                                <th>Product Description</th>\n                                                <th>SAC/HSN\t</th>\n                                                <th>Item Value</th>\n                                                <th>GST</th>\n                                                <th>VAT</th>\n                                                <th>S.CESS</th>\n                                                <th>C.CESS</th>\n                                                <th>Quantity</th>\n                                                <th>Total Item Value</th>\n                                            </tr>\n                                        </thead>\n                                        <tbody>\n                                            {% for item in items %}\n                                            <tr>\n                                                <td>{{item.date}}</td>\n                                                <td>{{item.description}}</td>\n                                                <td>{{item.sac_code}}</td>\n                                                <td>{{item.item_value}}</td>\n                                                <td>{{item.cgst_amount+item.sgst_amount+item.igst_amount}}</td>\n                                                <td>{{item.vat_amount}}</td>\n                                                <td>{{item.state_cess_amount}}</td>\n                                                <td>{{item.cess_amount}}</td>\n                                                <td>{{item.quantity}}</td>\n                                                <td>{{item.item_value_after_gst}}</td>\n                                            </tr>\n                                        {% endfor %}\n                                        </tbody>\n                                    </table>\n                                </div>\n\n                            </div>\n                        </td>\n                    </tr>\n\n                </tbody>\n            </table>\n            </div>\n            \n             <div>\n                <table class=\"table mb-0 \" >\n                <tbody>\n                    <tr>\n                        <td width=\"100%\">\n                            <div>\n                                <!--<div class=\"heading b-h\">-->\n                                <!--    <h4><strong>4. Item Details</strong></h4>-->\n                                <!--</div>-->\n                                <div class=\"c-p-8\">\n                                    <!--<div class=\"heading b-h\">-->\n                                    <!--    <h4><strong>4. Item Details</strong></h4>-->\n                                    <!--</div>-->\n                                    \n                                    <table class=\"table goods goods2 mb-0\">\n                                        <thead>\n                                             <tr>\n                                                <th>Tax'ble Value</th>\n                                                <th>CGST</th>\n                                                <th>SGST</th>\n                                                <th>IGST</th>\n                                                <th>Central CESS</th>\n                                                <th>State CESS</th>\n                                                <th>Discount(Rs)</th>\n                                                <th>Other Charges</th>\n                                                <th>Round Off</th>\n                                                <th>Total Amount</th>\n                                            </tr>\n                                        </thead>\n                                        <tbody>\n                                                <tr>\n                                                    {% if ( invoice_category=='Tax Invoice' or invoice_category=='Debit Invoice' ) %}\n                                                        <td>{{amount_before_gst}}</td>\n                                                        <td>{{cgst_amount}}</td>\n                                                        <td>{{sgst_amount}}</td>\n                                                        <td>{{igst_amount}}</td>\n                                                        <td>{{total_central_cess_amount}}</td>\n                                                        <td>{{total_state_cess_amount }}</td>\n                                                        <td>{{discount_value_before_gst}}</td>\n                                                        <td>{{other_charges}}</td>\n                                                        <td>{{invoice_round_off_amount}}</td>\n                                                        <td>{{total_invoice_amount}}</td>\n                                                    {% endif %}     \n                                                    {% if ( invoice_category=='Credit Invoice') %}\n                                                        <td>{{sales_amount_before_tax}}</td>\n                                                        <td>{{credit_cgst_amount}}</td>\n                                                        <td>{{credit_sgst_amount}}</td>\n                                                        <td>{{igst_amount}}</td>\n                                                        <td>{{total_credit_central_cess_amount}}</td>\n                                                        <td>{{total_credit_state_cess_amount }}</td>\n                                                        <td>{{discount_value_before_gst}}</td>\n                                                        <td>{{other_charges}}</td>\n                                                        <td>{{invoice_round_off_amount}}</td>\n                                                        <td>{{sales_amount_after_tax}}</td>\n                                                    {% endif %}     \n                                                </tr>\n                                        </tbody>\n                                    </table>\n                                </div>\n                            </div>\n                        </td>\n                    </tr>\n\n                </tbody>\n            </table>\n            </div>\n            <div>\n                 <table class=\"table mb-0 \"  >\n                    <tbody>\n                        <tr>\n                            <td width=\"100%\">\n                                <div>\n                                    <!--<div class=\"heading b-h\">-->\n                                    <!--    <h4><strong>4. Item Details</strong></h4>-->\n                                    <!--</div>-->\n                                    <div class=\"c-p-8\">\n                                     <table class=\"table  goods goods2\" style=\"margin: 0;\">\n                                        <thead>\n                                            <tr>\n                                                <th>HSN/SAC CODE</th>\n                                                <th>SALES</th>\n                                                <th>CGST</th>\n                                                <th>SGST</th>\n                                                <th>IGST</th>\n                                                <th>CESS TAX</th>\n                                                <th>CESS TAX2</th>\n                                                <th>VAT</th>\t\n                                                \n                                            </tr>\n                                        </thead>\n                                        <tbody>\n                                            {% for sac in sac_hsn_based_taxes %}\n                                            <tr>\n                                                <td>{{sac.sac_hsn_code}}</td>\n                                                <td>{{sac.amount_before_gst}}</td>\n                                                <td>{{sac.cgst}}</td>\n                                                <td>{{sac.sgst}}</td>\n                                                <td>{{sac.igst}}</td>\n                                                <td>{{sac.cess}}</td>\n                                                <td>{{sac.state_cess}}</td>\n                                                <td>{{sac.vat}}</td>\n                                            </tr>\n                                            {% endfor %} \n                        \n                                        </tbody>\n                                    </table>\n                                    </div>\n                                </div>\n                            </td>\n                        </tr>\n                    </tbody>\n                  </table>\n            </div>\n            <div>\n                <table class=\"table mb-0\">\n                    <tbody>\n                        <tr>\n                            <td width=\"100%\">\n                              <table class=\"table  goods goods2\" style=\"margin: 0;\">\n                                <tr>\n                                  <td>Remarks:</td>\n                                </tr>\n                              </table>\n                            </td>\n                        </tr>\n                    </tbody>\n                </table>\n            </div>\n            \n            <div class=\"border m-2 \">\n                <table class=\"table table-light mb-0\" >\n                    <tbody>\n                        <tr>\n                            <td width=\"100%\">\n                                <div class=\"c-p-8\">\n                                    <div class=\"c-p-8\">\n                                         <table width=\"100\" class=\"table \">\n                                    <tbody>\n                                        <tr>\n                                            <td width=\"50%\" style=\"vertical-align: left;\">\n                                                <div class=\"\">\n    \n                                                    <div class=\"c-p-8\">\n                                                        <div style=\"padding: 2px 5px\"><strong>Generated\n                           